
@{
    ViewBag.Title = "DemoPage";
}

<div class="panel panel-default">
    <div class="panel-heading main-heading">TGM201 - Voyage Plan</div>
    <div class="panel-body">

        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">@Html.ActionLink("Selection", "DemoPage", "DotNet")</li>
            <li role="presentation">@Html.ActionLink("Registration", "RegistrationPage", "DotNet")</li>
            <li role="presentation">@Html.ActionLink("Currency", "CurrencyPage", "DotNet")</li>
            <li role="presentation">@Html.ActionLink("Clause", "ClausePage", "DotNet")</li>
        </ul>
@using (Html.BeginForm())
{
        <div class="row">
            <div class="col-lg-2">
                <label>Vessel: </label>
               @Html.TextBox("Vessel", null, new { @class = "form-control" })
            </div>
            <div class="col-lg-2">
                <label>Voyage: </label>
               @Html.TextBox("Voyage", null, new { @class = "form-control" })
            </div>
            <div class="col-lg-2">
                <label>Currency: </label>
                @Html.TextBox("Currency", null, new { @class = "form-control" })  </div>
            <div class="col-lg-2">
                <label>Leg: </label>
                @Html.TextBox("leg", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <input type="submit" class="btn btn-primary" value="Search" />
            </div>
        </div>

if (ViewBag.searchresults.Count > 0)
{
        <table class="table">
            <thead>
                <tr>
                    <th>Action</th>
                    <th onclick="location.href='@Url.Action("DemoPage", "DotNet",new {filter = "vessel" })'">Vessel
                    @if (ViewBag.filter == "vessel")
                    {
                        <i style="left:10px" class="glyphicon glyphicon-chevron-up"></i>
                    }
                    </th>
                    <th onclick="location.href='@Url.Action("DemoPage", "DotNet",new {filter = "voyage" })'">Voyage
                        @if (ViewBag.filter == "voyage")
                         {
                            <i style="left:10px" class="glyphicon glyphicon-chevron-up"></i>
                        }
                    </th>
                    <th>Currency</th>
                    <th>Leg</th>
                </tr>
            </thead>
            <tbody>
@foreach (var searchObj in ViewBag.searchresults)
{
                <tr>
                    <td>@Html.ActionLink(" ", "RegistrationPage", "DotNet", null, new { @class = "glyphicon glyphicon-pencil" })</td>
                    <td>@searchObj.vessel</td>
                    <td>@searchObj.voyage</td>
                    <td>@searchObj.currency</td>
                    <td>@searchObj.leg</td>

                </tr>
}
            </tbody>
        </table>
}
}
</div>
</div>
